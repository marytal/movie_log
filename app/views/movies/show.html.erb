
<h1 class="movie_title"> <%= @movie.title %> </h1>

<br> <br>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <img class="poster" src="<%=@movie.poster%>">
      <%if @user && @movie.user_id == @user.id %>
        <%= link_to "Edit Movie", edit_movie_path(@movie.id)%>
        <form action="/movies/<%=@movie.id%>/delete" method="POST">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="submit"  class="btn btn-default" value="Delete movie">
        </form>
      <%else%>
        <form action="/movies/<%=@movie.id%>/copy" method="POST">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="submit"  class="btn btn-default" value="Copy Movie">
        </form>
      <%end%>
    </div>
    <div class="col-md-3">
      <h4> Year: <small> <%= @movie.year %> </small> </h4>
      <h4> Length: <small> <%= @movie.length %> minutes </small> </h4>
      <h4> Date Watched: <small> <%= @movie.date_watched %> </small> </h4> 
      <h4> Watched With: <small> <%= @movie.watched_with %> </small> </h4>  
      <h4> Your Rating: <small> <%= @movie.your_rating %>/100 </small> </h4> 
      <h4> Average Rating: <small> <%= @movie.average_rating %>/100 </small> </h4>
      <h4> Notes: </h4> 
      <p> <%= @movie.notes %></p>  
    </div>
    <div class="col-md-5">
      <h4>Description</h4>
      <p> <%= @movie.description %></p>
    </div>
  </div>
</div>